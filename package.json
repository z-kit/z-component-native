{
  "name": "z-hello-native",
  "description": "z-kit react-native component template",
  "version": "1.0.0",
  "main": "dist/index.js",
  "jsnext:main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "android": "node node_modules/react-native/local-cli/cli.js run-android",
    "ios": "node node_modules/react-native/local-cli/cli.js run-ios",
    "lint": "eslint index.ios.js index.android.js src test",
    "test": "npm run lint && nyc ava test",
    "build": "mkdirp dist && babel src --out-file dist/index.js --source-maps",
    "prepublish": "npm run build"
  },
  "author": "Matheus Kautzmann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/z-kit/z-hello-native/issues"
  },
  "homepage": "https://github.com/z-kit/z-hello-native",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/z-kit/z-hello-native.git"
  },
  "keywords": [
    "z-kit",
    "component",
    "hello",
    "react-native",
    "native"
  ],
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register",
      "babel-polyfill",
      "react-native-mock/mock"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "extends": [
      "airbnb"
    ],
    "rules": {
      "new-cap": "off",
      "react/jsx-filename-extension": "off"
    }
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-native": "^0.40.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.22.2",
    "babel-polyfill": "^6.20.0",
    "babel-preset-react-native": "^4.0.0",
    "babel-register": "^6.18.0",
    "enzyme": "^2.7.0",
    "eslint": "^3.13.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "mkdirp": "^0.5.1",
    "nyc": "^10.0.0",
    "react-native-mock": "^0.2.9"
  }
}
