{
	"name": "z-hello-native",
  "description": "z-kit react-native component template",
	"version": "1.0.0",
	"scripts": {
		"start": "node node_modules/react-native/local-cli/cli.js start",
		"android": "node node_modules/react-native/local-cli/cli.js run-android",
		"ios": "node node_modules/react-native/local-cli/cli.js run-ios",
    "lint": "eslint . src test",
		"test": "npm run lint && nyc ava test",
    "prepublish": "npm test"
	},
  "author": "Matheus Kautzmann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/z-kit/z-hello-native/issues"
  },
  "homepage": "https://github.com/z-kit/z-hello-native",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/z-kit/z-hello-native.git"
  },
  "keywords": [
    "z-kit",
    "component",
    "hello",
    "react-native",
    "native"
  ],
	"ava": {
		"babel": "inherit",
		"require": [
			"babel-register",
			"babel-polyfill",
			"react-native-mock/mock"
		]
	},
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "extends": [
      "airbnb"
    ],
    "rules": {
      "new-cap": "off",
      "react/jsx-filename-extension": "off"
    }
  },
	"dependencies": {
		"react": "^15.4.2",
		"react-native": "^0.40.0"
	},
	"devDependencies": {
		"ava": "^0.17.0",
		"babel-polyfill": "^6.20.0",
		"babel-preset-react-native": "^1.9.0",
		"babel-register": "^6.18.0",
		"enzyme": "^2.7.0",
		"eslint": "^3.13.1",
		"eslint-config-airbnb": "^14.0.0",
		"eslint-plugin-import": "^2.2.0",
		"eslint-plugin-jsx-a11y": "^3.0.2",
		"eslint-plugin-react": "^6.9.0",
		"nyc": "^10.0.0",
		"react-native-mock": "^0.2.9"
	}
}
